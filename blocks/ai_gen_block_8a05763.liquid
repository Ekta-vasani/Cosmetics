{% doc %}
  @prompt
    image picker

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-picker-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-image-picker__container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_blur | times: 2 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-image-picker__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-image-picker__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.placeholder_text_color }};
  }

  .ai-image-picker__placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-image-picker__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      {{ block.settings.overlay_direction }},
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    pointer-events: none;
  }

  .ai-image-picker__content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.content_padding }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-picker__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .ai-image-picker__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-image-picker__button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 16px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-image-picker__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-image-picker__button-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.button_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-picker__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-image-picker__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-image-picker__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-image-picker__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: 10px 20px;
    }
  }
{% endstyle %}

<div class="ai-image-picker-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-picker__container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-image-picker__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-image-picker__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-image-picker__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.title != blank or block.settings.description != blank or block.settings.button_text != blank %}
      <div class="ai-image-picker__content-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h3 class="ai-image-picker__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-image-picker__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-picker__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

